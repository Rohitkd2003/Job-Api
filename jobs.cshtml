@model job_api.Controllers.JobResponse

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Job Listings</title>
    <style>
        body {
            background-color: #f4f6f9;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 900px;
        }

        h1 {
            color: #343a40;
            font-weight: 600;
            text-align: center;
            margin-bottom: 40px;
        }

        .card-container {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .job-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

            .job-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .job-title {
            font-size: 1.3rem;
            color: #007bff;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .job-info {
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 10px;
        }

        .job-button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.2s ease;
            align-self: flex-start;
            margin-top: auto;
        }

            .job-button:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Job Listings</h1>
        <div class="card-container">
            @if (Model?.Jobs != null && Model.Jobs.Length > 0)
            { 
                @foreach (var job in Model.Jobs)
                {
                    <div class="job-card">
                        <h5 class="job-title">@job.Title</h5>
                        <p class="job-info"><strong>Company:</strong> @job.Company</p>
                        <p class="job-info"><strong>Location:</strong> @job.Location</p>
                        <p class="job-info"><strong>Employee Type:</strong> @job.employmentType</p>
                        <p class="job-info"><strong>Date Posted:</strong> @job.datePosted</p>
                        <p class="job-info"><strong>Salary Range:</strong> @job.salaryRange</p>

                        <button type="button" class="job-button" onclick="window.location.href='https://localhost:44337/Student/Apiform'">Apply Now</button>



                    </div>
                }
            }
            else
            {
                <div class="text-center">
                    <p>No job listings available.</p>
                </div>
            }
        </div>
    </div>

    <script>
        function applyJob(link) {
            if (link) {
                window.open(link, '_blank');
            } else {
                alert("Application link not available.");
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
